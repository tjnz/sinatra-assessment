<h2>Edit <%=@project.name%></h2>
<br><br>
<form action="/projects/<%=@project.id%>" method="post" class="form-horizontal">
	<input type="hidden" name="_method" value="patch">
  
	<div class="form-group">
    <label for="name" class="col-sm-2 control-label">Project Name:</label>
    <div class="col-sm-10">
      <input type="text" name="project[name]" class="form-control" id="name" value="<%=@project.name%>">
    </div>
  </div>
  
  <div class="from-group">
  <label for="cb" class="col-sm-2 control-label">Employees:</label>
  	<div class="col-sm-10" id="cb"  style="display: block;">
  		<% @project.business.employees.each do |employee| %>
  		<input type="checkbox" name="project[employee_ids][]" value="<%=employee.id%>" <%= 'checked' if @project.employees.include?(employee)%> ><%=employee.name%>
  		<%end%>
  	</div>
  </div>
  <br><br>
  
  <div class="form-group">
    <label for="new_employee" class="col-sm-2 control-label">Create Employee:</label>
    <div class="col-sm-10">
      <input type="text" name="employee" class="form-control" id="new_employee" placeholder="Enter your employee's name">
    </div>
  </div>
  
   <div class="from-group">
  <label for="cb" class="col-sm-2 control-label">Supplies:</label>
  	<div class="col-sm-10" id="cb"  style="display: block;">
  		<% @project.business.supplies.each do |supply| %>
  		<input type="checkbox" name="project[supply_ids][]" value="<%=supply.id%>"  <%= 'checked' if @project.supplies.include?(supply)%>><%=supply.name%>
  		<%end%>
  	</div>
  </div>
  <br><br>
  
  <div class="form-group">
    <label for="new_supply" class="col-sm-2 control-label">Create Supply:</label>
    <div class="col-sm-10">
      <input type="text" name="supply" class="form-control" id="new_supply" placeholder="Enter your supply's name">
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-primary">Edit Project</button>
    </div>
  </div>
	
</form>
