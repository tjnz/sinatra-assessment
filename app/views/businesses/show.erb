<h2><%= @business.name %></h2>
<% if @business == current_user %>
	<!-- <a href="/businesses/<%=@business.id%>/edit"> Edit </a> -->
	<h3>Projects:</h3><a href="/projects/new">New Project</a>
<% else %>
	<h3>Projects:</h3>
<% end %>

<% @business.projects.each do |project| %>
	<h3><%= project.name %></h3>
	<h4>Employees: <% project.employees.each do |emp| %>
			<%= "#{emp.name} " %>
		<% end %>
	</h4>
	<h4>Supplies:
		<% project.supplies.each do |sup| %>
			<%= "#{sup.name} " %>
		<% end %>
	</h4>
<% end %>
			