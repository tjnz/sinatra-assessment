<h2>Edit <%=@supply.name%></h2>
<br><br>
<form action="/supplies/<%=@supply.id%>" method="post" class="form-horizontal">
	<input type="hidden" name="_method" value="patch">
  
	<div class="form-group">
    <label for="name" class="col-sm-2 control-label">Supply Name:</label>
    <div class="col-sm-10">
      <input type="text" name="supply[name]" class="form-control" id="name" value="<%=@supply.name%>">
    </div>
  </div>
  

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-primary">Edit Item</button>
    </div>
  </div>
	
</form>
